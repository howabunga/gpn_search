<div class="page-header">
  <h3>Products with <%= @flavor.name %> Type Flavors</h3>
</div>

<div class="row">
  <div class="col-md-12">
   <table class="table table-striped table-hover">
    <tr>
      <th></th>
      <th>Image</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
    <% @flavor.products.order("name ASC").uniq.each do |product| %>
    <tr>
      <td>
        <form action="/create_favorite" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for product_id -->
          <input name="product_id" type="hidden" value="<%= product.id %>">

          <!-- Label and input for user_id -->
          <% if user_signed_in?%>
          <input name="user_id" type="hidden" value="<%= current_user.id %>">
          <button class="btn btn-success">
           <i class="fa fa-star"></i>
         </button>
         <% else %>
         <% end %>
       </form>
     </td>
     <td><img src= "<%= product.image %>" width = "50"></td>
     <td><%= product.name %></td>
     <td>
      <a href="/products/<%= product.id %>" class="btn btn-primary">Show</a>

      <% end %>
    </tr>
  </table>

  <div class="btn-group btn-group-justified">
    <a href="/flavors" class="btn btn-primary btn-block">
      Back
    </a>
  </div>
</div>
</div>
