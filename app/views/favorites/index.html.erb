<div class="page-header">
  <h1>My Favorites</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Remove Favorite</th>
        <th>Image</th>
        <th>Product</th>
        <th>Actions</th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
      <td><a href="/delete_favorite/<%= favorite.id %>" class="btn btn-warning" rel="nofollow"><i class="fa fa-trash-o"></i></a></td>
        <td><img src= "<%= favorite.product.image %>" width = "50"> </td>
        <td><%= favorite.product.name %></td>
        <td>
          <a href="/products/<%= favorite.product_id %>" class="btn btn-primary"><i class="fa fa-binoculars"></i> Show</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


