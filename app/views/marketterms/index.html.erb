<div class="page-header">
  <h1>
    Marketing Terms
    <a href="/marketterms/new" class="btn btn-lg btn-success">New Marketterm</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Flavor Type</th>
        <th>Product</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @marketterms.each do |marketterm| %>
      <tr>
        <td><%= marketterm.flavor.name %></td>
        <td><%= marketterm.product.name %></td>
        <td><%= marketterm.name %></td>
        <td>
          <a href="/marketterms/<%= marketterm.id %>" class="btn btn-primary">Show</a>
          <a href="/marketterms/<%= marketterm.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_marketterm/<%= marketterm.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
