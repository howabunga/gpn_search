<div class="page-header">
  <h1>
    Allergeninfos
    <a href="/allergeninfos/new" class="btn btn-lg btn-success">New Allergeninfo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Product</th>
        <th>Allergen</th>
        <th>Actions</th>
      </tr>

      <% @allergeninfos.each do |allergeninfo| %>
      <tr>
        <td><%= allergeninfo.product.name %></td>
        <td><%= allergeninfo.allergen.name %></td>
        <td>
          <a href="/allergeninfos/<%= allergeninfo.id %>" class="btn btn-primary">Show</a>
          <a href="/allergeninfos/<%= allergeninfo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_allergeninfo/<%= allergeninfo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
