<div class="page-header">
  <h1>
    Search Product by Allergen
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th></th>
      </tr>

      <% @allergens.each do |allergen| %>
      <tr>
        <td><%= allergen.name %></td>
        <td>
          <a href="/allergens/<%= allergen.id %>" class="btn btn-warning"><i class="fa fa-search"></i> Search</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
